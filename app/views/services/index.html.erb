<div class="page_content">
  <% if user_signed_in? %>
    <h2><%= link_to 'Add New Service', new_service_path %></h2>
  <% end %>
  <br>
  <div class="page_header">
    <h1>Facials</h1>
  </div>
  <%  @services.each do |f| %>
    <% if f.catagory == 'facial' %>
      <% if user_signed_in? %>
        <%= link_to edit_service_path(f.id) do  %>
          <i class="far fa-edit fa-2x"></i>
        <% end %>
        <%= link_to service_path(f.id), data: { confirm: "Are you sure?" }, method: :delete do %>
          <i class="far fa-trash-alt fa-2x"></i>
        <% end %>
      <% end %>
      <div class="service_name">
        <h3><%= f.name %></h3>
      </div>
      <div class="grid-container">
        <h3 class="service_left"><%= f.price %></h3>
        <h3 class="service_right"><%= f.time %></h3>
      </div>
      <h3 class="service_desc"><%= f.description %></h3>
    <% end %>
  <% end %>
